<div id="container">

  <div id="user_nav">
    <% if current_user %>
      <div class="row">
        <div id="signed_in_msg">
          <div class="col-lg-1">
            <div id="signed_in_logo">
              <!-- <img src="/assets/elements_40x40_icon.png"/> -->
              <img src="/assets/elements_240x60_app_logo.png" height="45" />
            </div>
          </div>
          <div id="signed_in_msg" class="col-lg-11">
            <img src="<%= current_user.user_picture %>" width="40" height="40"/>&nbsp;&nbsp;
            <strong><%= current_user.name %></strong>
            &nbsp;[<%= current_user.friends_count %> friends]&nbsp;&nbsp;
            <%= link_to "Sign out", signout_path, id: "sign_out" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-3">
          <div id="search_filter">
            <H3>Search Filter</H3>

            <form  id="searchForm">

              <div class="row" id="form_spacing">
                <div class="col-lg-1"></div>
                <div class="col-lg-10">
                  <div class="checkbox">
                    <label>
                      <input type="checkbox" name="search[public_details]" value="public" id="public_details"> Public details
                    </label>
                  </div>
                </div>
                <div class="col-lg-1"></div>
              </div>

              <div class="row" id="form_spacing">
                <div class="col-lg-1"></div>
                <div class="col-lg-10">
                  <div class="checkbox">
                    <label>
                      <input type="checkbox" name="search[friends]" value="friends" id="friends"> Friends
                    </label>
                  </div>
                </div>
                <div class="col-lg-1"></div>
              </div>

              <div class="row" id="form_spacing">
                <div class="col-lg-1"></div>
                <div class="col-lg-10">
                  <div class="checkbox">
                    <label>
                      <input type="checkbox" name="search[photos]" value="photos" id="photos"> Photos
                    </label>
                  </div>
                </div>
                <div class="col-lg-1"></div>
              </div>

              <div class="row" id="form_spacing_indent">
                <div class="col-lg-1"></div>
                <div class="col-lg-10">
                  <div class="checkbox">
                    <label>
                      <input type="checkbox" name="search[photos_uploaded]" value="photos_uploaded" id="photos_uploaded"> uploaded
                    </label>
                  </div>
                </div>
                <div class="col-lg-1"></div>
              </div>

              <div class="row" id="form_spacing_indent">
                <div class="col-lg-1"></div>
                <div class="col-lg-10">
                  <div class="checkbox">
                    <label>
                      <input type="checkbox" name="search[photos_tagged]" value="photos_tagged" id="photos_tagged"> tagged
                    </label>
                  </div>
                </div>
                <div class="col-lg-1"></div>
              </div>

              <div class="row" id="form_spacing_indent">
                <div class="col-lg-1"></div>
                <div class="col-lg-10">
                  <div class="checkbox">
                    <label>
                      <input type="checkbox" name="search[albums]" value="albums" id="albums"> albums
                    </label>
                  </div>
                </div>
                <div class="col-lg-1"></div>
              </div>

              <div class="row" id="form_spacing_large">
                <div class="col-lg-1"></div>
                <div class="col-lg-10">
                  <label for="text_filter">Text Search</label>
                  <input class="form-control" id="text_filter" type="text" name="search[text_filter]" placeholder="text filter">
                </div>
                <div class="col-lg-1"></div>
              </div>

              <div class="row" id="form_spacing_large">
                <div class="col-lg-1"></div>
                <div class="col-lg-10">
                  <label for="result_count">Result Count</label>
                  <input class="form-control" id="result_count" type="number" name="search[result_count]" placeholder="number">
                </div>
                <div class="col-lg-1"></div>
              </div>

              <div class="row">
                <div class="col-lg-1"></div>
                <div class="col-lg-10" id="position_search_button">
                  <input class="btn btn-primary" id="search_button" type="submit" name="search_button" value="Search"/>
                </div>
                <div class="col-lg-1"></div>
              </div>

            </form>

          </div>
        </div>

        <div class="col-lg-9">
          <div id="results_pane">
            <H3>Results</H3>
            <!-- <strong><%= current_user.public_details %></strong>
            <hr>
            <strong><%= current_user.friends %></strong> -->
          </div>
        </div>
      </div>

      <div class="row">
        <div id="footer">
          <div class="col-lg-2">
              <%= link_to "Privacy Policy", "/" %>
          </div>

          <div class="col-lg-2">
              <%= link_to "Contact Us", "/" %>
          </div>

          <div class="col-lg-2">
              <%= link_to "Help", "/" %>
          </div>

          <div class="col-lg-2" id="raise_save_button">
              <button id="clear-results"class="btn btn-warning">Clear Results</button>
          </div>

          <div class="col-lg-2" id="raise_save_button">
              <button id="share-results"class="btn btn-primary">Share Results</button>
          </div>

          <div class="col-lg-2" id="raise_save_button">
              <!-- <%= link_to "SAVE", "/" %> -->
              <form class="form-inline" method="get" action="/">
                <input class="btn btn-primary" type="submit" name="saveResults" value="Save Results"
              </form>
          </div>
        </div>
      </div>

    <% else %>

      <div class="row">
          <div class="col-lg-12">
              <div id="start_page_image">
                <img src="/assets/elements_394x150_large_editors_pick.png" width="500" height="200"/>
                <br/>
                <p><%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %></p>
              </div>
          </div>
      </div>

    <% end %>

  </div>
</div>
